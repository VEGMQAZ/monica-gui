; ---------------------------------------------------------------------------------
; example file for monica.ini
; values are part of a different simulation and must be respectively changed
; if some options should be ommitted, the option can be commented with a semicolon
; ---------------------------------------------------------------------------------

[files]
soil=SOIL.txt
croprotation=ROTATION.txt
fertiliser=SLAGDUNG.txt
irrigation=Irrig.TXT
climate_prefix=MET_HF.

[simulation_time]
startyear=1991
endyear=1993

[nmin_fertiliser]
activated=0
;mineral_fert_id=1
;organic_fert_id=2
;min=10.0
;max=100.0
;delay_in_days=30

[automatic_irrigation]
activated=0
;amount=0
;treshhold=0.15
;nitrate=0
;sulfate=0

[site_parameters]
latitude=52.809399
slope=0.0
heightNN=0.0                    ; [m]
soilCNRatio=10.0
atmospheric_CO2=0.0
wind_speed_height=2.5
leaching_depth=2.0

;groundwater_depth_min=1.5      ; [m]
;groundwater_depth_max=1.7      ; [m]
;groundwater_depth_min_month=3  ; month [1-12]
;surface_roughness=0.02          ; [m]
;pH=6.2
;N_deposition = 30


;groundwater_discharge=3         ; [mm]
;layer_thickness=0.1
;number_of_layers=20
;critical_moisture_depth=0.3     ; Lower boundary for irrigation trigger [m]
;dispersion_length=0.049         ; [m]
;max_percolation_rate=8          ; [mm d-1]


[general_parameters]
;use_secondary_yields=1

[init_values]
init_percentage_FC=0.8          ; Initial soil moisture content in percent field capacity
init_soil_nitrate=0.0001        ; Initial soil nitrate content [kg NO3-N m-3]
init_soil_ammonium=0.0001       ; Initial soil ammonium content [kg NH4-N m-3]

